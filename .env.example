# Variables de entorno para el subgrafo KPI
# ⚠️ IMPORTANTE: Este servicio se conecta a tu base de datos EXISTENTE

# Configuración de tu base de datos existente
DATABASE_URL=postgresql://username:password@tu-host:5432/veterinaria_db
POSTGRES_USER=username
POSTGRES_PASSWORD=password
POSTGRES_DB=veterinaria_db
POSTGRES_HOST=tu-host  # IP o hostname de tu microservicio de BD
POSTGRES_PORT=5432

# Configuración del servidor KPI
HOST=0.0.0.0
PORT=9090
DEBUG=true

# GraphQL
ENABLE_INTROSPECTION=true
ENABLE_PLAYGROUND=true

# CORS - Incluye tu gateway y frontend
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:4000

# Federation
FEDERATION_VERSION=2.0
SUBGRAPH_NAME=kpi-service
GATEWAY_URL=http://localhost:4000/graphql